<Window
    x:Class="GitImgs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GitImgs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GitHub图片分析"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel Margin="5" DockPanel.Dock="Top">
            <TextBlock
                Margin="5"
                Padding="5"
                DockPanel.Dock="Left"
                Text="图片目录" />
            <Button
                Width="100"
                Margin="5"
                Padding="5"
                Click="Button_Click"
                Content="开始分析"
                DockPanel.Dock="Right" />
            <TextBox
                x:Name="gitUrl"
                Margin="5"
                Padding="5"
                Text="https://github.com/zmrbak/WebApi/tree/main/%E5%90%8C%E5%AD%A6%E8%AF%84%E4%BB%B7" />
        </DockPanel>
        <TextBox
            x:Name="imagText"
            Margin="5"
            Padding="5"
            AcceptsReturn="True"
            HorizontalScrollBarVisibility="Auto"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</Window>
